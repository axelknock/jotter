# Jotter Environment Configuration
# Copy this file to .env and modify as needed

# Directory on your local machine where jots will be stored
# This can be an absolute path like /home/user/my-jots or ~/Documents/jots
# Or a relative path like ./my-jots
JOTS_DIR=./jots

# Port to run Jotter on (optional - defaults to 8000)
# JOT_PORT=8000

# Host to bind to (optional - defaults to 0.0.0.0 in Docker)
# JOT_HOST=0.0.0.0
